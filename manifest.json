{
  "manifest_version": 2,
  "name": "ReYohoho",
  "version": "1.0.0",
  "description": "Open ReYohoho directly from kinopoisk.ru",
  "icons": {
    "128": "./icons/icon128.png",
    "48": "./icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.kinopoisk.ru/*"
      ],
      "run_at": "document_idle",
      "all_frames": false,
      "js": [
        "./player.js"
      ],
      "css": [
        "player.css"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "oleg.texet@gmail.com"
    }
  }
}